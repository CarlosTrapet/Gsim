<?xml version="1.0" encoding="UTF-8" ?>

  <name>Swarm Simulator</name>

  <description>
    An incremental game. Starting with just a small Renko and a small pile of debris, turn her into the Destroyer of Worlds.
  </description>

  <author href="https://github.com/Voileexperiments/renko-simulator" email="">
    Permayuyuko (P)
  </author>

  <!-- open reddit in the device's real browser. http://stackoverflow.com/questions/14070841/phonegap-open-link-in-browser -->
  <access origin="http://127.0.0.1*" />

  <icon src="icon.png" />
  <gap:splash src="splash.png" />

  <gap:platform name="android" />
  <!-- http://stackoverflow.com/questions/8697295/are-all-those-permissions-needed-by-phonegap-on-android -->
  <preference name="permissions" value="none" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</widget>
